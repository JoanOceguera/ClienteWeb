namespace ReporteDBModel
{    
   public class Controlador
    {
        static public ReporteDBEntities context = null;
        
        public Controlador()
        {
            if(context == null)
                context = new ReporteDBEntities();
        }
         public ReporteDBEntities GetCNX()
        {
            if (context == null)
                context = new ReporteDBEntities();
            return context;
        }
        public ReporteDBEntities cnx
        {
            get { return GetCNX(); }
            set { context = value; }
        }
    }
